.hero
  width: 100%
  max-width 1625px
  max-height: 100vh
  margin: 0 auto
  position relative
  z-index 1
  overflow hidden

  /* This is just an overlay on top of the video, but below the title */
  &:after
    content: ''
    background: rgba(black,.5)
    width: 100%
    height 100%
    position absolute
    top 0
    left: 0
    display block

  &--inner
    max-height: 100vh

  @media desktop
    &:hover
      .playPauseVideo
        opacity: 1;

  &__title
    color white
    width 100%
    position absolute
    top 50%
    transform: translateY(-50%)
    font-family: sans-serif
    text-align: center
    z-index 9

  &__video
    width: 100%
    max-height: 100vh
    padding-bottom 56.25%
    // padding-bottom 75%
    position relative

  &__demoVideo
    width: 100%;
    height: 100%;
    object-fit: cover
    position absolute
    top: 0
    left: 0

.playPauseVideo
  color: white;
  background: url(../images/icon-pause.png) no-repeat center center;
  background-size: 15px 15px;
  width: 50px;
  height: 50px;
  position: absolute;
  bottom: 0;
  left: 0;
  text-indent: -9999px;
  outline: none;
  z-index: 999;
  cursor: pointer;

  &--paused
    background: url(../images/icon-play.png) no-repeat center center;
    background-size: 20px 20px;